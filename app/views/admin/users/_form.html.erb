<%= button_to 'Back', users_path, :method => :get %><br>

<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
  Name <%= f.text_field :name %>
  </div>
  
  <div class="field">
  Email <%= f.email_field :email %>
  </div>
  
  <div class="field">
  Password <%= f.password_field :password %>
  </div>
  
  <div class="field">
  Confirm password <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
  Role <%= f.select :role, User.roles %>
  </div>
  
  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>